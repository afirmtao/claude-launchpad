---
extends: default

ignore: |
  .ansible/
  molecule/
  .cache/

rules:
  line-length:
    max: 120
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
  new-line-at-end-of-file: enable
